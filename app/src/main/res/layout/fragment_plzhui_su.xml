<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xe.lzh.rfid.fragment.PLZhuiSuFragment">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text=" 导入EXCEL档号 "
        android:layout_gravity="center"
        android:id="@+id/bt_daoru"
        android:background="@drawable/textviewbag"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ListView
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/pllistView"
        android:layout_below="@+id/bt_daoru"
        android:layout_centerHorizontal="true"
         />
    <ListView
        android:layout_weight="1"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pllistViewjieguo"
        android:layout_below="@+id/pllistView"
        android:layout_centerHorizontal="true"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/pllistViewjieguo"
        android:paddingLeft="10dp"
        android:layout_marginBottom="0dp"
        android:paddingRight="10dp">

        <Button
            android:id="@+id/bt_chaku"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/textviewbag"
            android:text="查库"
            android:textColor="@color/black"
            android:textSize="20sp" />
        <Button
            android:id="@+id/bt_plshanchu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="gone"
            android:background="@drawable/textviewbag"
            android:text="删除"
            android:textSize="20dp" />
        <Button
            android:id="@+id/bt_zhuisu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/textviewbag"
            android:text="追溯"
            android:visibility="gone"
            android:textSize="20dp" />




        <Button
            android:id="@+id/bt_guanbi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/textviewbag"
            android:text="停止"
            android:visibility="gone"
            android:textColor="@color/black"
            android:textSize="20sp" />


    </LinearLayout>

</LinearLayout>
